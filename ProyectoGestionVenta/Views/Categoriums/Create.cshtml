@model ProyectoGestionVenta.Models.Categorium

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<link href="~/css/categoria.css" rel="stylesheet" />
<div class="card card-primary col-7 offset-3">
    <div class="card-header">
        <h3 class="card-title">Crear Categorias</h3>
    </div>
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nombre" class="control-label"></label>
            <input asp-for="Nombre" type="text" id="Nombre" onkeypress="return soloLetras(event)" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Descripcion" class="control-label"></label>
            <input asp-for="Descripcion" type="text" id="Descripcion" onkeypress="return soloLetras(event)" />
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>

        <div class="row offset-2">
            <div class="col">
                <input type="submit" value="Crear" class="btn btn-primary col-6" />
            </div>
            <div class="col">
                <a class="btn btn-secondary col-6" href="@Url.Action("Index")">Ir a Lista</a>
            </div>
        </div>

    </form>
    <script>
        function soloLetras(event) {
            var charCode = event.which || event.keyCode;

            
            if ((charCode >= 65 && charCode <= 90) || (charCode >= 97 && charCode <= 122) || charCode === 32) {
                return true; 
            } else {
                return false; 
            }
        }
    </script>


</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}