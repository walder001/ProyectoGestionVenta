@model ProyectoGestionVenta.Models.Categorium

@{
    ViewData["Title"] = "Details";
      Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<link href="~/css/categoria.css" rel="stylesheet" />
<div class="card card-primary col-6 offset-3">
    <div class="card-header">
        <h3 class="card-title">Detalles de Categoría</h3>
    </div>
    <dl class="categoria-details row">
        <div class="col-sm-3">
            <dt>Nombre:</dt>
        </div>
        <div class="col-sm-9">
            <dd>@Model?.Nombre</dd>
        </div>
        <div class="col-sm-3">
            <dt>Descripción:</dt>
        </div>
        <div class="col-sm-9">
            <dd>@Model?.Descripcion</dd>
        </div>
        <div class="col-sm-3">
            <dt>Estado:</dt>
        </div>
        <div class="col-sm-9">
            <dd>@Model?.Estado</dd>
        </div>
    </dl>

    <nav>

        <div class="row offset-2">
            <div class="col">
                <a class="btn btn-primary col-6" href="@Url.Action("Edit", new { id = Model?.CategoriaId })">Editar</a>
            </div>
            <div class="col">
                <a class="btn btn-secondary col-6" href="@Url.Action("Index")">Ir a Lista</a>
            </div>
        </div>
    </nav>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


