@model IEnumerable<ProyectoGestionVenta.Models.Articulo>

@{
    ViewData["Title"] = "Index";
}
<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        border: 1px solid black;
        padding: 5px;
    }

    td {
        text-align: center;
    }

    a {
        color: blue;
        text-decoration: none;
    }

        a:hover {
            color: red;
            text-decoration: underline;
        }

    .crear-nuevo {
        background-color: #007bff;
        color: #fff;
        padding: 10px 15px;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
    }

        .crear-nuevo:hover {
            background-color: #0069d9;
        }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        border: 1px solid #0000ff;
        padding: 8px;
    }

    th {
        text-align: center;
    }



    tr {
        border-bottom: 1px solid #ddd;
    }

    td {
        padding: 10px;
    }

    .edit-button {
        background-color: #007bff;
        color: #fff;
        padding: 5px 10px;
        border-radius: 5px;
        font-size: 14px;
        cursor: pointer;
    }

        .edit-button:hover {
            background-color: #0069d9;
        }

    .details-button {
        background-color: #007bff;
        color: #fff;
        padding: 5px 10px;
        border-radius: 5px;
        font-size: 14px;
        cursor: pointer;
    }

        .details-button:hover {
            background-color: #0069d9;
        }

    .delete-button {
        background-color: #dc3545;
        color: #fff;
        padding: 5px 10px;
        border-radius: 5px;
        font-size: 14px;
        cursor: pointer;
    }

        .delete-button:hover {
            background-color: #c82333;
        }

    h1 {
        font-family: Arial, sans-serif;
        font-size: 24px;
        color: #333;
        text-align: center;
    }

    p {
        font-family: Arial, sans-serif;
        font-size: 16px;
        color: #666;
        text-align: center;
    }

    a {
        font-family: Arial, sans-serif;
        font-size: 16px;
        color: #000;
        text-decoration: none;
    }

        a:hover {
            color: #00F;
        }
</style>



<h1>Lista de Articulos</h1>

<p>
    <a class="btn btn-outline-primary" href="@Url.Action("Create")">Crear Nuevo</a>
</p>

<table class="table table-striped table-bordered table-hover">
    <thead class="thead bg-primary">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Codigo)</th>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.PrecioVenta)</th>
            <th>@Html.DisplayNameFor(model => model.Costo)</th>
            <th>@Html.DisplayNameFor(model => model.Stock)</th>
            <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
            <th>@Html.DisplayNameFor(model => model.Estado)</th>
            <th>@Html.DisplayNameFor(model => model.Categoria.CategoriaId)</th>
            <th>@Html.DisplayNameFor(model => model.Proveedor.ProveedorId)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Codigo)</td>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.PrecioVenta)</td>
                <td>@Html.DisplayFor(modelItem => item.Costo)</td>
                <td>@Html.DisplayFor(modelItem => item.Stock)</td>
                <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                <td>@Html.DisplayFor(modelItem => item.Categoria.CategoriaId)</td>
                <td>@Html.DisplayFor(modelItem => item.Proveedor.ProveedorId)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ArticuloId">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.ArticuloId">Detalle</a> |
                    <a asp-action="Delete" asp-route-id="@item.ArticuloId">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

