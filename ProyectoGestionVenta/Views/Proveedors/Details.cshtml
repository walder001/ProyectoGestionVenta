@model ProyectoGestionVenta.Models.Proveedor

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<link href="~/css/proovedor.css" rel="stylesheet" />
<div class="card card-primary col-6 offset-3">
    <div class="card-header">
        <h3 class="card-title">Detalles de Proveedor</h3>
    </div>
    <dl class="proveedor-details row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Correo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Correo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Representante)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Representante)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Direccion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Direccion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Contacto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Contacto)
        </dd>
    </dl>
        <nav>

            <div class="row offset-2">
                <div class="col">
                    <a class="btn btn-primary col-6" href="@Url.Action("Edit", new { id = Model?.ProveedorId })">Editar</a>
                </div>
                <div class="col">
                    <a class="btn btn-secondary col-6" href="@Url.Action("Index")">Ir a Lista</a>
                </div>
            </div>
        </nav>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


