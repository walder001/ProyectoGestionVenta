@model IEnumerable<ProyectoGestionVenta.Models.Proveedor>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        border: 1px solid black;
        padding: 5px;
    }

    td {
        text-align: center;
    }

    a {
        color: blue;
        text-decoration: none;
    }

        a:hover {
            color: red;
            text-decoration: underline;
        }

    .crear-nuevo {
        background-color: #007bff;
        color: #fff;
        padding: 10px 15px;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
    }

        .crear-nuevo:hover {
            background-color: #0069d9;
        }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        border: 1px solid #0000ff;
        padding: 8px;
    }

    th {
        text-align: center;
    }



    tr {
        border-bottom: 1px solid #ddd;
    }

    td {
        padding: 10px;
    }

    .edit-button {
        background-color: #007bff;
        color: #fff;
        padding: 5px 10px;
        border-radius: 5px;
        font-size: 14px;
        cursor: pointer;
    }

        .edit-button:hover {
            background-color: #0069d9;
        }

    .details-button {
        background-color: #007bff;
        color: #fff;
        padding: 5px 10px;
        border-radius: 5px;
        font-size: 14px;
        cursor: pointer;
    }

        .details-button:hover {
            background-color: #0069d9;
        }

    .delete-button {
        background-color: #dc3545;
        color: #fff;
        padding: 5px 10px;
        border-radius: 5px;
        font-size: 14px;
        cursor: pointer;
    }

        .delete-button:hover {
            background-color: #c82333;
        }

    h1 {
        font-family: Arial, sans-serif;
        font-size: 24px;
        color: #333;
        text-align: center;
    }

    p {
        font-family: Arial, sans-serif;
        font-size: 16px;
        color: #666;
        text-align: center;
    }

    a {
        font-family: Arial, sans-serif;
        font-size: 16px;
        color: #000;
        text-decoration: none;
    }

        a:hover {
            color: #00F;
        }
</style>
<div class="d-flex justify-content-center">
    <h1>Lista de proveedores </h1>
</div>
<main>
    <p>
        <a class="btn btn-outline-primary" href="@Url.Action("Create")">Crear Nuevo</a>
    </p>
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead bg-primary">

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rnc)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Correo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Representante)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Direccion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Contacto)
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rnc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Correo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Representante)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Direccion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Contacto)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.ProveedorId })"><i class="fas fa-pencil-alt"></i> Editar</a>
                        <a href="@Url.Action("Details", new { id = item.ProveedorId })"><i class="fa fa-list" aria-hidden="true"></i> Detalles</a>
                        <a href="@Url.Action("Delete", new { id = item.ProveedorId })"><i class="fa fa-trash" aria-hidden="true"></i>Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</main>