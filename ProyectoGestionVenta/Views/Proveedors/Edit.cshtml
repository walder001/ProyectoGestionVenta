@model ProyectoGestionVenta.Models.Proveedor

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link href="~/css/proovedor.css" rel="stylesheet" />
<div class="card card-primary col-7 offset-3">
    <div class="card-header">
        <h3 class="card-title">Editar Proovedor </h3>
    </div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProveedorId" />
            <div class="form-group">
                <label asp-for="Correo" class="control-label"></label>
                <input asp-for="Correo" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Representante" class="control-label"></label>
                <input asp-for="Representante" class="form-control" />
                <span asp-validation-for="Representante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contacto" class="control-label"></label>
                <input asp-for="Contacto" class="form-control" />
                <span asp-validation-for="Contacto" class="text-danger"></span>
            </div>
            <div class="row offset-2">
                <div class="col">
                    <input type="submit" value="Guardar" class="btn btn-primary col-6" />
                </div>
                <div class="col">
                    <a class="btn btn-secondary col-6" href="@Url.Action("Index")">Ir a Lista</a>
                </div>
            </div>

        </form>
        <script>
            function soloLetras(event) {
                var charCode = event.which || event.keyCode; // Obtener el código de la tecla presionada

                // Comprobar si la tecla presionada es una letra (a-zA-Z) o espacio (32)
                if ((charCode >= 65 && charCode <= 90) || (charCode >= 97 && charCode <= 122) || charCode === 32) {
                    return true; // Permitir la tecla
                } else {
                    return false; // Bloquear la tecla
                }
           }
        </script>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
