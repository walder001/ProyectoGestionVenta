
@model ProyectoGestionVenta.Models.Proveedor

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<link href="~/css/proovedor.css" rel="stylesheet" />
<div class="card card-primary col-12">
    <div class="card-header">
        <h3 class="card-title">Crear Proveedor</h3>
    </div>
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="form-group col">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" onkeypress="return soloLetras(event)" />

                <div class="valid-feedback">
                    ¡Campo válido!
                </div>
                <div class="invalid-feedback">
                    Por favor, ingresa tu nombre.
                </div>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group col">
                <label asp-for="Rnc" class="control-label"></label>
                <input asp-for="Rnc" class="form-control" id="inputText" onkeypress="return rncCarateres(event)" />
                <span asp-validation-for="Rnc" class="text-danger"></span>
            </div>
        </div>
            <div class="form-group">
                <label asp-for="Correo" class="control-label"></label>
                <input asp-for="Correo" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
        <div class="row">
            <div class="form-group col">
                <label asp-for="Representante" class="control-label"></label>
                <input asp-for="Representante" class="form-control" onkeypress="return soloLetras(event)" />
                <span asp-validation-for="Representante" class="text-danger"></span>
            </div>
        
            <div class="form-group col">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
        </div>
            <div class="form-group">
                <label asp-for="Contacto" class="control-label"></label>
            <input asp-for="Contacto" class="form-control" onkeypress="return contactoCarateres(event)" />
                <span asp-validation-for="Contacto" class="text-danger"></span>
            </div>
       
        <div class="row offset-2">
            <div class="col">
                <input type="submit" value="Crear" class="btn btn-primary col-6" />
            </div>
            <div class="col">
                <a class="btn btn-secondary col-6" href="@Url.Action("Index")">Ir a Lista</a>
            </div>
        </div>
    </form>
    <script src="~/js/proveedor.js"></script>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
